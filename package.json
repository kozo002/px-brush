{
  "name": "px-brush",
  "amdName": "px-brush",
  "version": "1.0.1",
  "description": "Pixelated Brush/Eraser on HTML5 Canvas",
  "main": "lib/px-brush.min.js",
  "umd:main": "lib/px-brush.min.js",
  "source": "src/index.js",
  "scripts": {
    "build": "microbundle -f umd -o lib/px-brush.js && cp lib/px-brush.min.js lib/px-brush.js",
    "dev": "microbundle watch -f umd",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kozo002/px-brush.git"
  },
  "keywords": [
    "canvas",
    "brush",
    "drawing",
    "pixel",
    "pixelated"
  ],
  "author": "kozo yamagata",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kozo002/px-brush/issues"
  },
  "homepage": "https://github.com/kozo002/px-brush",
  "devDependencies": {
    "@babel/preset-env": "^7.8.6",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-istanbul": "^6.0.0",
    "jest": "^25.1.0",
    "jest-canvas-mock": "^2.2.0",
    "js-yaml": "^3.13.1",
    "microbundle": "^0.12.0-next.8",
    "serialize-javascript": ">=2.1.1"
  },
  "jest": {
    "setupFiles": [
      "jest-canvas-mock"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ],
        "plugins": [
          "add-module-exports",
          [
            "istanbul",
            false
          ]
        ]
      }
    }
  }
}
